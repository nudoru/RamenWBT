				<datasize>400,300</datasize>
				<dataposition>300,150</dataposition>
			</settings>
			<item id="item1">
				<settings>
					<position>50,50</position>
				</settings>
				<title><![CDATA[Item item item 1]]></title>
				<text><![CDATA[getlatin:200:500]]></text>
				<image url="assets/solo_female_100.jpg" x="" y="" width="100" height="100" />
			</item>
			<item id="item2">
